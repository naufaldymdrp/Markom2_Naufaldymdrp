@using Markom2.Repository.Models
@using Markom2.Web.Extensions 
@model (MRole, FormPartialMode)

@{ 
    var disabled = false;
    var modalTitle = "";
    var buttonId = "";
    var formId = "";

    if (Model.Item2 == FormPartialMode.Add)
    {
        modalTitle = "Add Role";
        buttonId = "MRoleModalSubmit";
        formId = "AddRoleForm";
    }
    else if (Model.Item2 == FormPartialMode.Detail)
    {
        disabled = true;
        modalTitle = "Role Detail " + Model.Item1.Name;
    }
    else if (Model.Item2 == FormPartialMode.Edit)
    {
        modalTitle = "Edit Role";
        buttonId = "MRoleModalSubmitEdit";
        formId = "EditRoleForm";
    }
    else if (Model.Item2 == FormPartialMode.Delete)
    {
        modalTitle = "Delete Role";
        buttonId = "MRoleModalSubmitDelete";
        formId = "DeleteRoleForm";
    }

    <form method="post" class="MRoleFormPartial" id="@formId">
        <div class="modal-header">
            <h5 class="modal-title">@modalTitle</h5>
        </div>
        <div class="modal-body">
            <input type="hidden" asp-for="Item1.Id" />
            <input type="hidden" asp-for="Item1.CreatedBy" />
            <div class="row d-flex justify-content-center">
                <div class="col-sm">
                    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                    @if (Model.Item2 == FormPartialMode.Edit)
                    {
                        <input type="hidden" asp-for="Item1.Code" />
                    }
                    <div class="form-group row">
                        <div class="col-sm-3">
                            <label asp-for="Item1.Code" class="control-label"></label>
                        </div>
                        <div class="col-sm-8">
                            <input asp-for="Item1.Code" class="form-control" disabled placeholder="<auto-generated>" />
                            <span class="text-danger" asp-validation-for="Item1.Code"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-3">
                            <label asp-for="Item1.Name" class="control-label"></label>
                        </div>
                        <div class="col-sm-8">
                            <input asp-for="Item1.Name" class="form-control" disabled="@disabled" />
                            <span class="text-danger" asp-validation-for="Item1.Name"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-3">
                            <label asp-for="Item1.Description" class="control-label"></label>
                        </div>
                        <div class="col-sm-8">
                            @Html.TextAreaFor(item => item.Item1.Description, new { @class = "form-control", @disabled = disabled })
                        </div>
                    </div>
                </div>                
            </div>
        </div>
        <div class="modal-footer">
            <button type="submit" class="btn @(Model.Item2 != FormPartialMode.Delete ? "btn-primary" : "btn-danger" )" 
                    id="@buttonId" hidden="@disabled">Submit</button>
            <button type="button" class="btn btn-warning" id="MRoleModalCloser">Cancel</button>
        </div>
    </form>
}